{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "GesteDJ UI",
  "version": "0.1.0",
  "identifier": "com.gestdj.ui",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm start",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "GesteDJ UI",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Gesture-controlled DJ interface",
    "longDescription": "Modern UI for GesteDJ gesture-controlled DJ software",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}